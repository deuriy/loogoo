.Banner
	position relative
	padding 18px 20px 24px 18px
	// background-image linear-gradient(225deg, #00bdfc 0%, #0072dd 100%)
	background-image linear-gradient(210deg, #e2faff 0%, #e5f6ff 100%)
	// color $white
	color #2D3040
	border-radius 8px
	
	@media $smPlus
		padding 18px 25px 23px
	
	&_closeBtn
