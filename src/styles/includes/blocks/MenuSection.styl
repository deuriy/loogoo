.MenuSection
	display flex
	justify-content space-between
	align-items center
	border-bottom 1px solid $grey
	overflow auto
	
	@media $xs
		padding-right 20px
		padding-bottom 14px
		padding-left 19px
	
	&_selectionLink
		margin-right 25px
		
		&:last-child
			margin-right 0
	
	&-fixed
		position fixed
		z-index 10
		top 67px
		right 0
		left 0
		height 34px
		padding-right 10px
		padding-left 10px
		background $white
		@extend .transition
	
	&-fixedTop
		top 0
	
	&-profile
		@media $xs
			padding-bottom 20px
	
	&-notifications
		overflow visible