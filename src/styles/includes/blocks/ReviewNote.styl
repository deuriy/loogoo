.ReviewNote
	border-radius 4px
	
	&_header
		display flex
		justify-content space-between
		align-items center
		padding 13px 31px 14px 29px
		background #EBF0F2
		
		@media $xs
			padding-right 20px
			padding-left 20px
	
	&_title
		font-weight 600
		font-size 15px
		line-height 1.534
		color $blue2
	
	&_body
		padding 18px 28px 25px
		background $lightGrey
		
		@media $xs
			padding-right 20px
			padding-left 20px
	
	&_text
		margin-bottom 13px
		line-height 1.643
		
		@media $xs
			margin-bottom 17px
		
		&:last-child
			margin-bottom 0
	
	&_links
		display flex
		align-items center
		
		@media $xs
			flex-direction column
			align-items stretch
			margin-bottom -25px
	
	&_link
		font-weight 500
		color $blue
		text-decoration underline
		
		&:hover
			text-decoration none
		
		&-provideEvidence,
		&-verification
			position relative
			
			@media $xs
				margin 0 -20px
				padding 14px 21px
				border-top 1px solid #dfe4e6
				font-size 15px
				text-decoration none
				
				&:after
					content ""
					position absolute
					top 0
					right 25px
					bottom 0
					width 6px
					height 9px
					margin auto
					background url('../img/arrow_blue.png') 0 0 / cover no-repeat			
		
		&-provideEvidence
			margin-right 30px
			
			@media $xs
				margin-right -20px
	
	&-pink
		.ReviewNote_header
			background #FFE9DE
		
		.ReviewNote_body
			background #FEF5ED
		
		.ReviewNote_title,
		.ReviewNote_link
			color $orange