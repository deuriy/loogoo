.PopupMenu
	z-index 101
	visibility hidden
	opacity 0
	
	&, &_overlay
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		@extend .transition
	
	&_overlay
		background rgba($black, 40%)
	
	&_title
		margin 0 -10px 10px
		padding 0 20px 10px
		border-bottom 1px solid $grey
		font-weight 600
		font-size 16px
	
	&_wrapper
		position absolute
		min-width 180px
		max-width 100%
		padding 16px 10px 13px
		border-radius 4px
		background $white
	
	&_link, &_label
		display block
		padding 11px 10px
		font-weight 500
		font-size 16px
		color #8396AC
		@extend .transition
		
		&:hover, &.active
			font-weight 600
			color $blue
	
	&-opened
		visibility visible
		opacity 1
	
	&-profileMessages
		.PopupMenu_wrapper
			width 240px
	
	&-right
		.PopupMenu_wrapper
			right 10px
			left auto
	
	&-paddingLeft
		.PopupMenu_wrapper
			padding-left 4px
	
	&-paddingTop
		.PopupMenu_wrapper
			padding-top 4px
			padding-bottom 5px
		
		.PopupMenu_link:first-child
			padding-top 7px
	
	&-login
		.PopupMenu_wrapper
			width 240px