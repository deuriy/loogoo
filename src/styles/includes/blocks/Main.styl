		padding-right 30px
		
		@media $smMinus
			padding-right 0
		
		@media $xs
			position relative
			margin-bottom 0
		
		&-opened
			z-index 100
	
	&_aside
		width 33%
		
		@media $smMinus
			width auto
	
	&_newsSidebar
		margin-top 43px
		
		@media $xs
			margin-top 22px
	
	&_categories,
	&_dossierList
