.Main
	flex auto 1 1
	background $white
	
	@media $xs
		margin-top 77px
	
	&_container
		padding-top 40px
		padding-bottom 32px
		
		@media $xs
			padding-top 0
			padding-bottom 50px
	
	&_columns
		display flex
		margin-right -15px
		margin-left -15px
		
		@media $smMinus
			flex-direction column
	
	&_left,
	&_aside
		padding-right 15px
		padding-left 15px
	
	&_left
		width 67%
		
		@media $smMinus
			width auto
		
	&_menuSection
		margin-right 30px
		margin-bottom 27px
		
		@media $xs
			margin-right -15px
			margin-left -15px
			margin-bottom 12px
	
	&_topicsHeader
		margin-bottom 33px
	
	&_sectionDescription
		margin-top 25px
