.CostSection
	padding 31px 0
	background $white
	
	@media $md
		padding 110px 0
	
	&_title
		margin-bottom 30px
		font-size 24px
		line-height 30px
		color #28394c
		font-weight 600
		
		@media $smMinus
			text-align center
		
		@media $md
			margin-bottom 70px
			font-size 40px
	
	&_costBlocks
		display grid
		grid-template-columns 100%
		gap 8px
		margin-bottom 28px
		
		@media $smPlus
			grid-template-columns 1fr 1fr
			gap 20px
			margin-bottom 54px
	
	&_contacts
		display grid
		grid-template-columns 100%
		gap 25px
		
		@media $md
			grid-template-columns 1fr 1fr
	
	&_contactsText
		padding-right 5px
		padding-left 5px
		font-size 15px
		line-height 24px
		color #28394c
		font-weight 500
		
		@media $smMinus
			text-align center
		
		@media $md
			max-width 500px
			margin-left -5px
			font-size 16px
			line-height 26px