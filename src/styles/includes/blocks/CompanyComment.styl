.CompanyComment

  &_wrapper
    padding-bottom 25px
    margin-bottom 25px
    border-bottom 1px solid #ebf0f2
  
  &_header, &_headerLeft, &_infoTop
    display flex

  &_header
    justify-content space-between
    align-items flex-start
    margin-bottom 13px

  &_headerLeft
    align-items center

  &_headerRight
    position relative
    padding-top 14px
    padding-right 7px
	
  &_dotsMenu
    display none
    top 1px
    right -20px

  &_userPhoto
    margin-top 3px
    flex-shrink 0

  &_info
    margin-top 5px
    margin-left 13px

  &_nameAndRating
    display flex
    align-items center

  &_userName
    flex-shrink 0
    font-weight 500
    font-size 14px

  &_userIcons
    position relative
    top 1px
    margin-left 7px

  &_rating
    margin-left 6px

    .Rating_icon
      height 18px

  &_date
    margin-left 1px
    font-size 13px
    color $blue2

  &_text
    font-size 15px  
    line-height 1.67
    
    a
      color $blue
      text-decoration underline
      
      &:hover
        text-decoration none

  &_rate
    display flex
    flex-flow row nowrap
    align-items flex-end
    margin-bottom 15px

    &-current
      font-weight 500
      font-size 20px
      line-height 20px
      margin-right 3px

    &-max
      margin-right 3px
      font-weight 500
      line-height 1

    &-confirmed
      margin-left 10px
      font-size 13px
      color #85be1f
      font-weight 500
      line-height 1

    &-img
      margin-right 5px

    &-arrow
      margin-left 3px
      position relative
      top -3px

    .Rating_icon
      color #e6922b
      width 14px
      svg 
        width 14px

  &_ImagesList
    display flex
    flex-flow row wrap
    margin-top 20px

  &_ImagesItem
    margin-right 10px

  &_Image
    display block
    width 40px
    height 40px
    object-fit cover

  &_footer
    display flex
    justify-content space-between
    align-items center
    margin-top 20px
    padding-right 7px

  &_location
    font-size 13px
    color #666666

  &_flag
    margin-right 10px

  &_childComments
    padding-left 60px

  &_button
    width 230px
    height 35px
    color $white
    background $blue
    outline none 
    border none
    border-radius: 30px

    &-wrapper
      display flex
      justify-content flex-end

    &-img
      margin-left 13px

