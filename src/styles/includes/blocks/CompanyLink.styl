.CompanyLink
	position relative
	display inline-flex
	align-items flex-start
	width 260px
	font-weight 500
	
	&:before
		content ""
		position absolute
		top -10px
		right -10px
		bottom -10px
		left -10px
		border-radius 2px
		background transparent
		@extend .transition
	
	&:hover
		&:before
			background #FAFAFA
	
	&_img, &_textWrap
		position relative
	
	&_img
		width 40px
		margin-right 15px
		border-radius 3px
	
	&_text
		color $blue2
		font-size 13px