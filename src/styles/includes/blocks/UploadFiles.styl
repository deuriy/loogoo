.UploadFiles
	@media $smPlus
		max-width 382px
		
	&_items
		@media $xs
			max-height calc(100vh - 220px)
			overflow auto
		
	&_item
		position relative
		padding-right 30px
		margin-bottom 20px
	
	&_input
		flex 166px 1 1
		height 44px
		padding-right 12px
		padding-left 12px
		border 1px solid #EBF0F2
		border-radius 3px
		outline none
		font-size 15px
		color $black
		
		+placeholder()
			color $blue3
	
	&_removeItem
		position absolute
		top 0
		right 0
		bottom 0
		width 25px
		height 25px
		margin auto
