.Message
	position relative
	display flex
	align-items flex-start
	padding 19px 14px 16px 17px
		
	&:after
		content ""
		position absolute
		right 15px
		bottom 0
		left 15px
		height 1px
		background #EBF0F2
	
	&:hover
		background #F2F4F6
	
	&-highlighted, &-full, &:hover, &:last-child
		&:after
			display none
	
	&_userPhoto
		flex-shrink 0
		margin-right 12px
	
	&_info
		width 236px
		line-height 21px
	
	&_header, &_body
		display flex
		justify-content space-between
	
	&_nameWrapper
		display flex
		align-items center
		overflow hidden
	
	&_name
		font-weight 600
		font-size 14px
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
	
	&_statusIcon
		margin-left 4px
	
	&_dateTime
		flex-shrink 0
		margin-left 7px
		font-size 11px
		color $blue2
	
	&_text
		color #4C4C4C
		font-size 13px
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
		
		&-twoLines
			display -webkit-box
			-webkit-line-clamp 2
			-webkit-box-orient vertical
			white-space normal
			line-height 18px
	
	&_quantity
		flex-shrink 0
		margin-top 3px
		margin-left 9px
	
	&-highlighted
		background #F2F4F6
		
		.Message_dateTime
			font-size 13px
	
	&-full
		padding 10px 0 11px
		
		&:hover
			background transparent
		
		.Message_userPhoto
			margin-top 5px
			margin-right 14px
		
		.Message_info
			flex-grow 1
			width auto
		
		.Message_header
			justify-content flex-start
		
		.Message_dateTime
			margin-left 8px
		
		.Message_text
			font-size 14px
			color $black
			white-space normal