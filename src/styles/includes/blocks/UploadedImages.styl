.UploadedImages
	position relative
	
	&_wrapper
		display flex
		
		@media $xs
			overflow-x scroll
	
	&::after
		@media $xs
			content ""
			position absolute
			top 0
			right 0
			width 40px
			height 70px
			background-image: linear-gradient(-90deg, rgba(249, 249, 249, 0.9490196078431373) 0%, rgba(249, 249, 249, 0) 100%)
			pointer-events none
	
	&_item
		position relative
		flex 90px 0 0
		margin-right 8px
		
		&:last-child
			margin-right 0
	
	&_img
		display block
		border-radius 2px
	
	&_removeItem
		position absolute
		top 0
		right 0
		width 20px
		height 20px
		border-radius 50%
