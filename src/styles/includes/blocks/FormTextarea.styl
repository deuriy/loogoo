.FormTextarea
	display block
	width 100%
	max-width 100%
	padding 17px 20px
	border 1px solid $grey
	color $black
	font-size 15px
	@extend .transition
	outline none
	resize none
	overflow hidden
	
	&:focus
		border-color $blue2
	
	&-commentForm
		// max-height 200px
		min-height 72px
		// overflow auto
		
		// @media $xs
		// 	max-height 150px
	
	&-commentFormCompany
		height 55px
		
		@media $xs
			height 60px
	
	&-topicCreationForm
		height 171px
		padding 20px 25px
		color $black
		
		@media $xs
			height 160px
			padding 12px 10px
	
	&-submitComplaint, &-leaveNote
		height 100px
		padding 7px 9px
		font-size 16px
		resize both
		
		+placeholder()
			color rgba($blue2, 30%)
	
	&-sendMessage
		position relative
		// height 50px
		min-height 50px
		max-height 200px
		padding 15px 80px 15px 15px
		border-color #DFE2E6
		border-radius 3px
		font-size 14px
		color $blue2
		overflow-x hidden
		overflow-y auto
		
		@media $xs
			max-height 145px
		
		&::-webkit-scrollbar
			width 5px
			right 2px
			
			@media $xs
				width 0
		
		&::-webkit-scrollbar-track
			border-radius 3px
		
		&::-webkit-scrollbar-thumb
			border-radius 3px
			background-color #DFE4E6
		
		@media $xs
			height 40px
			padding 10px 9px
	
	&-companySettings
		min-height 90px
		padding 10px 12px
		border-radius 3px
		
		@media $xs
			min-height 160px