.Vacancy
	@media $xs
		display flex
		flex-direction column
		// padding-top 64px
		padding-top 20px
		
	&_viewAll
		margin-bottom .8em
	
	&_header
		@media $xs
			display flex
			justify-content space-between
			margin-bottom 17px
	
	&_headerWrapper
		display flex
		justify-content space-between
		flex-grow 1
	
	&_headerRight
		@media $xs
			flex-shrink 0
			text-align right
	
	&_dotsMenu
		margin-top 10px
		
	&_title
		margin-bottom .2em
		font-weight 500
		font-size 24px
		
		@media $xs
			margin-bottom 0
			font-weight 600
			font-size 20px
	
	&_workplace
		margin-bottom .9em
		margin-left .12em
		font-size 13px
		line-height 1.5384
		color #999
		
		@media $xs
			margin-bottom 0
			margin-left 0
	
	&_menuSection
		margin-bottom 1.7em
		margin-left .21em
		
		// @media $xs
		// 	order -1
		// 	margin 0 -20px 13px
		
		@media $xs
			margin-bottom 0
			margin-left 0
	
	&_swiper
		margin-bottom 36px
		
		@media $xs
			margin-right -20px
			margin-left -20px
			margin-bottom 21px
	
	&_mark
		color #999
		font-size 13px
	
	&_actionLinks
		display grid
		grid-template-columns auto auto
		justify-content space-between
		align-items center
		margin-bottom 15px
		padding-bottom 15px
		border-bottom 1px solid #ebeff3
	
	&_text
		margin-bottom 2.5em
		margin-left .2em
		font-size 16px
		line-height 1.625
		
		a
			color $blue
			font-weight 500
			text-decoration underline
			
			&:hover
				text-decoration none
		
		@media $xs
			margin-left 0
			margin-bottom 18px
			font-size 14px
		
	&_truncatedText
		display -webkit-box
		text-overflow ellipsis
		-webkit-line-clamp 5
		-webkit-box-orient vertical
		word-wrap break-word
		overflow hidden
	
	&_jobBtn
		@media $xs
			width 100%
	
	&_statIcons
		margin-bottom 28px
		padding-right 31px
		
		@media $xs
			margin-bottom 21px
			padding-right 0
	
	&_ratingSection
		margin-bottom 22px