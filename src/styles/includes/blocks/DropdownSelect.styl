.DropdownSelect
	.fs-wrap
		width 102px
		line-height normal
		
	.fs-label-wrap
		padding-right 4px
		
		&:after
			content ""
			position absolute
			top 14px
			right 0
			border 3px solid transparent
			border-top 3px solid $blue
		
		.fs-label
			padding 5px 5px 5px 10px
			color $blue
			text-align right
		
		.fs-arrow
			display none
	
	.fs-dropdown
		width 100%
		margin-top 6px
		
		&:before
			content ""
			position absolute
			top -10px
			right 10px
			left auto
			width 16px
			height 10px
			background url('../img/corner_shadow.jpg') 0 0 no-repeat
		
		.fs-options
			padding-top 12px
			padding-bottom 11px
		
	.fs-option
		padding 6px 13px
		font-weight 500
		color $black
	
	&-commentsSorting
		.fs-wrap
			width 140px
			text-align right
		
		.fs-dropdown
			text-align left
	
	&-autoWidth
		.fs-wrap
			width auto
	
	&-profileSettings				
		.fs-dropdown
			right 0
			min-width 115px
	
	&-notifications
		.fs-wrap
			text-align right
		
		.fs-dropdown
			right 0
			min-width 120px
			text-align left
	
	&-mobile
		@media $xs
			.fs-wrap:after
				content ""
				position fixed
				z-index 100
				top 0
				left 0
				width 100%
				height 100%
				background transparent
				pointer-events none
				@extend .transition
			
			.fs-wrap.fs-open:after
				background rgba(0, 0, 0, .2)
				
			.fs-dropdown
				right auto
				left 0
				width 290px
				margin-top 0
				border none
				border-radius 4px
				
				.fs-options
					padding 16px 10px 13px
				
				&:before
					display none
			
			.fs-option
				padding 11px 10px
				font-size 16px
				color #8396AC
	
	&-companyProfile
		max-height 18px
		
		.fs-wrap
			width 214px
			
		.fs-label-wrap
			&:after
				top 8px
				right -5px
				
			.fs-label
				padding 0
				font-weight 600
				font-size 14px
		
		.fs-dropdown
			left -45px
			
			&:before
				right 0
				left 0
				margin auto
	
	&-companySettings
		.fs-wrap
			display block
			width auto
			
		.fs-label-wrap
			display block
			padding-right 0
			border 1px solid $grey
			border-radius 3px
			
			.fs-label
				display flex
				align-items center
				padding 11px 12px 12px
				font-size 15px
				text-align left
				
				&:after
					content ""
					margin-top 5px
					margin-left 3px
					border 3px solid transparent
					border-top 3px solid $blue
			
			&:after
				display none
		
		.fs-dropdown
			&:before
				right 0
				left 0
				margin auto

.fs-options	
	.ps__rail-y
		margin-top 10px
		margin-bottom 10px

.DropdownSelect
	.fs-wrap.multiple
		.fs-dropdown
			left 5px
			width 155px
			margin-top 12px
		
		.fs-options
			padding-top 8px
			padding-bottom 8px
		
		.fs-checkbox i
			height 12px
			border none
			border-radius 0
			
		.fs-option
			padding 7px 13px 6px 34px
			color #D2D7D9
			font-size 14px
			
			&.selected
				color $black
				
				.fs-checkbox i
					left 8px
					background url('../img/dropdown_checkbox.svg') 0 0 no-repeat