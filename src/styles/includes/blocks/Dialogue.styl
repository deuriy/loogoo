.Dialogue
	display flex
	flex-direction column
	justify-content space-between
	
	&_headerWrapper, &_headerLeft, &_headerRight
		display flex
		align-items center
	
	&_header
		border-bottom 1px solid #ebf0f2
	
	&_headerWrapper
		justify-content space-between
		margin-bottom 6px
		padding-top 12px
		padding-bottom 5px
		
		@media $xs
			padding 4px 20px 8px
	
	&_btnBack
		margin-top -2px
		margin-right 16px
	
	&_userName
		margin-right 8px
		font-weight 600
		font-size 16px
		white-space nowrap
	
	&_userIcons, &_actionIcons
		display flex
	
	&_userRating
		margin-left 11px
	
	&_actionIcon
		&-search
			margin-top 3px
			
		&-dots
			width 16px
			margin-left 13px
			color $blue2
	
	&_dotsMenu
		margin-left 13px
	
	&_footer
		display flex
		flex-direction column
		// height calc(100vh - 200px)
		height 69vh
		
		@media $xs
			height 78vh
		
		// @media $xs
		// 	height calc(100vh - 170px)
	
	&_conversationChoice
		margin-top 160px
	
	&_messages
		position relative
		// display flex
		// flex-direction column
		// height calc(100vh - 240px)
		margin-bottom 11px
		padding-top 5px
		overflow-y auto
		
		&::-webkit-scrollbar
			width 3px
		
		&::-webkit-scrollbar-track
			border-radius 3px
		
		&::-webkit-scrollbar-thumb
			border-radius 3px
			background #DFE4E6
		
		@media $xs
			// height calc(100vh - 105px)
			// height auto
			padding-top 15px
			padding-right 20px
			padding-left 20px
		
		&:before
			content ""
			flex auto 1 1