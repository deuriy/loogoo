extends /layouts/main_layout_profile
block vars
	- var title = "Мои темы (нет результатов)";
	- var wrapperModifiers = "Wrapper-noMobileHeader";
block content
	.Container.Main_container
		.Main_columns
			.Main_left
				.MobileHeader.hidden-smPlus
					a(href="#").BtnBack.MobileHeader_btnBack
						include /includes/svg/SvgIco/arrow_left
					h1.MobileHeader_title Мои темы
					.DotsMenu.DotsMenu-share.MobileHeader_dotsMenu
						a(href="javascript:;").DotsMenu_icon
							include /includes/svg/SvgIco/dots
						.DotsMenu_wrapper
							ul.DotsMenu_menu
								li.DotsMenu_item
									a(href="#LinkCopiedNotification", data-action="copyURL").DotsMenu_link
										include /includes/svg/SvgIco/copy_reverse
										.
											Копировать
				.Main_topicsHeader.hidden-xs
					include /includes/blocks/TopicsHeader
				.NoResults
					.NoResults_icon
						include /includes/svg/post2
					.NoResults_text Вы не создали ещё ни одной темы
					a(href="#").BtnBlue.BtnBlue-light.BtnBlue-noResults Создать
			.Aside.Main_aside
				.SidebarMenu.SidebarMenu-profileMenu#SidebarMenu.hidden-smMinus
					h3.SidebarMenu_title Профиль
					ul.SidebarMenu_menu
						li.SidebarMenu_item
							a(href="/my_topics.html").SidebarMenu_link Мои темы
						li.SidebarMenu_item
							a(href="/profile_invite.html").SidebarMenu_link Мои приглашения
						li.SidebarMenu_item
							a(href="/my_notifications_no_results.html").SidebarMenu_link Уведомления
						li.SidebarMenu_item
							a(href="#").SidebarMenu_link Настройки
						li.SidebarMenu_item
							a(href="#").SidebarMenu_link Выход
				.TopicCreationBlock.hidden-xs
					h3.TopicCreationBlock_title Нужен ответ?
					.TopicCreationBlock_text Просто создайте тему и вам ответят
					a(href="#").BtnBlue.BtnBlue-light.BtnBlue-topicCreation Cоздать
	include /includes/blocks/LinkCopiedNotification
block page_bottom
	script(src="/js/topics_filter.js")