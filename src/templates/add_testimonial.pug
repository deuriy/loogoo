			.Main_left
				.MobileHeader.hidden-smPlus
					a(href="#").BtnBack.MobileHeader_btnBack
						include /includes/svg/SvgIco/arrow_left
					h1.MobileHeader_title #{title}
					a(href="#PopupShare", data-action="openMobilePopup").DotsIcon.MobileHeader_dotsIcon
						include /includes/svg/SvgIco/dots
				form(action="#", name="add_testimonial").AddTestimonial#FormAddingTestimonial
					h2.AddTestimonial_title.hidden-xs Мой отзыв о Sony Corporation
					.Remark.Remark-addTestimonial.AddTestimonial_remark
						a(href="javascript:;", data-action="hideBlockWithCookie").Remark_close
							include /includes/svg/icon_close_remark
						.Remark_text Обратите внимание, что пройдя один раз бесплатную онлайн верификацию, вы сможете добавлять неограниченное количество отзывов без подтверждений.#[a(href="#").ArrowLink Пройти верификацию]
					h3.AddTestimonial_subTitle Какими услугами вы воспользовались?
					.AddTestimonial_field
						.AddTestimonial_fieldItems
							.AddTestimonial_fieldItem
								.AddTestimonial_fieldRow
									.Checkbox.Checkbox-largeCheck.Checkbox-addTestimonial.Checkbox-fieldVisibility.Checkbox-employment
										input(type="checkbox", name="employment", value="yes", id="employment", checked).Checkbox_input
										label(for="employment").Checkbox_label Трудоустройство
								.AddTestimonial_fieldRow.AddTestimonial_fieldRow-gutterLeft.AddTestimonial_fieldRow-dependent
									.DropdownSelect.DropdownSelect-mobile.DropdownSelect-companySettings.AddTestimonial_dropdownSelect
										select(name="country").DropdownSelect_select
											option(value="none") Выберите страну
											option(value="uk") Украина
											option(value="ru") Россия
											option(value="by") Беларусь
											option(value="pl") Польша
											option(value="kz") Казахстан
					.AddTestimonial_field.AddTestimonial_field-documentsPreparation
						.AddTestimonial_fieldItems
							.AddTestimonial_fieldItem
								.AddTestimonial_fieldRow
									.Checkbox.Checkbox-largeCheck.Checkbox-addTestimonial.Checkbox-fieldVisibility.Checkbox-documentsPreparation
										input(type="checkbox", name="documents_preparation", value="yes", id="documents_preparation", checked).Checkbox_input
										label(for="documents_preparation").Checkbox_label Изготовление документов
								.AddTestimonial_fieldRow.AddTestimonial_fieldRow-gutterLeft.AddTestimonial_fieldRow-dependent
									.DropdownSelect.DropdownSelect-mobile.DropdownSelect-companySettings.AddTestimonial_dropdownSelect
										select(name="documents_type").DropdownSelect_select
											option(value="none") Выберите тип документов
											option(value="type1") Тип 1
											option(value="type2") Тип 2
											option(value="type3") Тип 3
						a(href="javascript:;").AddFieldItem.AddFieldItem-documentType.AddTestimonial_addFieldItem.hidden
							include /includes/svg/icon_add
							span.AddFieldItem_text Добавить ещё тип документов
					.Ratings.AddTestimonial_ratings
