												a(href="http://whatsapp.com", target="_blank").Share_socLink
													include /includes/svg/socicons/whatsapp
											li.Share_socItem
												a(href="http://telegram.com", target="_blank").Share_socLink
													include /includes/svg/socicons/telegram
											li.Share_socItem
												a(href="http://vk.com", target="_blank").Share_socLink
													include /includes/svg/socicons/vk
